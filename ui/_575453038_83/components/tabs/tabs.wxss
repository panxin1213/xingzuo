.component {
    background-color: #fff;
    white-space: nowrap;
    box-sizing: border-box;
    border-radius: 24rpx 24rpx 0 0;
}

.content {
    width: 690rpx;
    box-sizing: border-box;
    justify-content: space-between;
    padding-left: 10rpx;
}

.content,.content-inner {
    position: relative;
    display: flex;
    align-items: center;
}

.content-inner {
    width: 100%;
    height: 100%;
    z-index: 1;
    background: none;
    justify-content: flex-end;
}

.item {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 0;
    transition: color .2s;
    transition: color .2s,;
    text-align: center;
    width: 96rpx;
    font-size: 1em;
    position: relative;
}

.item.act {
    font-weight: 700;
    font-size: 32rpx;
    font-size: 1.143em;
}

.bottom-bar {
    position: absolute;
    background: #f8dc3e;
    width: 44rpx;
    height: 6rpx;
    z-index: 0;
    bottom: 10rpx;
    left: 50%;
    transform: translate3d(-50%,0,0);
    border-radius: 3rpx;
}

.small {
    height: 4px;
    border-radius: 2px;
}