.guide-top-wrap {
    position: absolute;
    z-index: 99;
    left: 0;
    width: 100%;
    top: 0;
}

.guide-tips {
    width: 100%;
    height: 54rpx;
    box-sizing: border-box;
    background: none;
    position: relative;
    display: flex;
    align-items: center;
    justify-content: flex-end;
}

.guide-txt {
    width: 540rpx;
    height: 58rpx;
}

.guide-txt-bg-h,.guide-txt-bg-n {
    width: 100%;
    height: 100%;
}

.guide-txt .guide-txt-bg-h {
    display: block;
}

.guide-txt .guide-txt-bg-n {
    opacity: 0;
}

.guide-btn-act .guide-txt-bg-h {
    display: none;
}

.guide-btn-act .guide-txt-bg-n {
    opacity: 1;
}

.guide-tips-btn {
    width: 132rpx;
    left: 425rpx;
    background: none;
}

.guide-tips-btn,.guide-tips-close {
    height: 54rpx;
    position: absolute;
    top: 0;
    z-index: 2;
}

.guide-tips-close {
    width: 54rpx;
    left: 6rpx;
}

.guide-mask {
    width: 100vw;
    height: 100vh;
    background: rgba(0,0,0,.75);
    position: absolute;
    top: 0;
    left: 0;
    z-index: 99;
}

.guide-info-wrap {
    width: 430rpx;
    position: absolute;
    top: 154rpx;
    right: 30rpx;
    z-index: 100;
}

.guide-info {
    width: 430rpx;
    height: auto;
    background: #fff;
    border-radius: 20rpx;
    padding: 50rpx 31rpx 51rpx;
    box-sizing: border-box;
}

.guide-close {
    width: 250rpx;
    height: 80rpx;
    background: #9668bb;
    border-radius: 40rpx;
    line-height: 80rpx;
    border: none;
    margin: 22rpx auto 0;
    color: #fff;
    font-size: 28rpx;
    font-weight: 700;
    text-align: center;
}

.guide-close-act {
    background: #7b49a4;
    color: hsla(0,0%,100%,.4);
}

.guide-info .i {
    width: 54rpx;
    height: 54rpx;
    transform: rotate(45deg) translate3d(-50%,0,0);
    position: absolute;
    top: -6rpx;
    right: 72rpx;
    background: #fff;
}

.step1,.step2 {
    color: #1a1a1a;
    font-size: 30rpx;
    font-weight: 600;
    line-height: 36rpx;
    padding-left: 33rpx;
    position: relative;
}

.step1 i {
    width: 56rpx;
    height: 38rpx;
    margin: 0 10rpx;
    background-image: url(data:image/png;base64,);
    background-position: 50%;
    background-repeat: no-repeat;
    background-size: 100%;
    display: inline-block;
    vertical-align: middle;
}

.step1 .tips-img {
    width: 323rpx;
    height: 281rpx;
    margin: 17rpx 0 22rpx 6rpx;
    display: block;
}

.step1::before,.step2::before {
    content: "";
    position: absolute;
    display: inline-block;
    width: 30rpx;
    height: 30rpx;
    top: 4rpx;
    left: 0;
    line-height: 30rpx;
    text-align: center;
    background: #9668bb;
    border-radius: 50%;
    color: #fff;
    font-size: 20rpx;
    font-weight: 700;
    margin-right: 8rpx;
    vertical-align: middle;
}

.step1::before {
    content: "1";
}

.step2::before {
    content: "2";
}