.bottom-box {
    width: 690rpx;
    margin: 22rpx auto 0;
    padding: 30rpx 0 0;
    background: #fff;
    height: auto;
    border-radius: 30rpx;
    box-sizing: border-box;
    position: relative;
}

.box-border {
    border: 1px solid #e9e9e9;
}

.bottom-title {
    border-bottom: 1rpx solid #e9e9e9;
    padding: 0 36rpx 30rpx;
    display: flex;
    align-items: center;
    font-size: 30rpx;
    font-family: PingFang SC;
    font-weight: 600;
    color: #1a1a1a;
}

.bottom-tit-img {
    width: 40rpx;
    height: 40rpx;
    margin-right: 12rpx;
}

.left-text {
    display: flex;
    align-items: center;
    height: 35rpx;
}

.left-text::after {
    content: "";
    border: 3rpx solid #1a1a1a;
    height: 25rpx;
    margin: 25rpx;
    background: #1a1a1a;
}

.bottom-content {
    justify-content: space-between;
    flex-wrap: wrap;
    padding: 0 20rpx 26rpx;
}

.bottom-content,.item-content {
    display: flex;
}

.item-content {
    flex-direction: column;
    align-items: center;
    width: 33%;
    margin-top: 30rpx;
}

.bottom-content image {
    width: 100rpx;
    height: 100rpx;
    margin-bottom: 10rpx;
}

.bottom-content text {
    font-size: 24rpx;
    font-family: PingFang SC;
    font-weight: 700;
    color: #1a1a1a;
}