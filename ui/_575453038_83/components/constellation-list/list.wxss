.con-wrap {
    width: 690rpx;
    margin: -10rpx auto auto;
}

.index-banner {
    width: 100%;
    height: 310rpx;
}

.inner-wrap {
    background: #fff;
    width: 100%;
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
    padding: 2rpx 0 46rpx 1rpx;
    margin-top: -10rpx;
    border-radius: 20rpx;
    overflow: hidden;
}

.inner-wrap .item {
    margin: 0;
    padding: 0;
    border: none;
    width: 172rpx;
    background: none;
}

.inner-wrap .item::after {
    border: none;
}

.inner-wrap .item .img,.inner-wrap .item .name,.inner-wrap .item .time {
    display: block;
}

.inner-wrap .item .img {
    width: 120rpx;
    height: 120rpx;
    margin: 60rpx auto auto;
}

.inner-wrap .item .name {
    color: #000;
    font-size: 30rpx;
    font-weight: 900;
    margin-top: 12rpx;
    margin-bottom: 9rpx;
    line-height: 1;
    width: 100%;
    text-align: center;
}

.inner-wrap .item .time {
    color: #666;
    font-size: 22rpx;
    font-weight: 600;
    line-height: 1;
    width: 100%;
    text-align: center;
}