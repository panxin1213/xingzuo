.reward-popup {
    width: 100vw;
    height: 100vh;
    position: fixed;
    top: 0;
    left: 0;
    background: rgba(0,0,0,.7);
    display: flex;
    justify-content: center;
    align-items: center;
    z-index: 10;
    line-height: 0;
}

.reward-popup .box {
    position: relative;
}

.reward-popup .bg {
    width: 750rpx;
    height: 889rpx;
}

.reward-popup .content {
    text-align: center;
    position: absolute;
    top: 360rpx;
    left: 0;
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.reward-popup .title {
    font-size: 36rpx;
    font-weight: 600;
    color: #f74148;
    line-height: 1;
}

.reward-popup .icon {
    width: 147rpx;
    height: 167rpx;
    margin: 20rpx 0 40rpx;
}

.reward-popup .tips-b,.reward-popup .tips-p {
    font-size: 26rpx;
    font-weight: 400;
    color: #909090;
    line-height: 34rpx;
}

.reward-popup .tips-b .i {
    font-style: normal;
    color: #9354ff;
}

.reward-popup .btn {
    background: linear-gradient(0deg,#f1353d,#ff5158);
    width: 400rpx!important;
    height: 85rpx!important;
    font-size: 30rpx;
    font-weight: 700;
    color: #fff;
    margin-top: 40rpx;
}

.reward-popup .btn,.reward-popup .btn::after {
    border-radius: 43rpx;
}

.icon-circle-close {
    background-size: 100%;
    background-position: 0 0;
    background-repeat: no-repeat;
    background-image: url("data:image/png;base64,");
    right: 42rpx;
    top: 65rpx;
    width: 70rpx;
    height: 70rpx;
    position: absolute;
}

.icon-circle-close-act {
    opacity: .6;
}