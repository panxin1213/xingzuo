.box-wrap {
    width: 100%;
    height: 100vh;
    display: flex;
    justify-content: flex-start;
    align-items: center;
    flex-direction: column;
    overflow: hidden;
}

.sharebox {
    width: 704rpx;
    height: 704rpx;
    position: relative;
    overflow: hidden;
}

.share-img {
    width: 100%;
}

.btn-wrap {
    padding-top: 60rpx;
}

.btn {
    display: block;
    width: 420rpx!important;
    height: 100rpx!important;
    border-radius: 50rpx;
    background: linear-gradient(90deg,#0ed14e,#16b124);
    color: #fff;
    font-size: 34rpx!important;
    font-weight: 500;
    line-height: 100rpx!important;
    padding: 0;
    margin: 0;
    box-sizing: border-box;
    display: -webkit-flex;
    display: flex;
    justify-content: center;
    align-items: center;
}

.btn.btn-share {
    background: none;
    color: #15b226;
    border: 2rpx solid #16b124;
    margin-top: 30rpx;
}

.btn.btn-share.btn-act::after {
    background: rgba(21,178,37,.1);
}

.btn::before {
    content: "";
    display: inline-block;
    width: 36rpx;
    height: 36rpx;
    margin-right: 13rpx;
}

.btn.save-btn::before {
    background: url("data:image/png;base64,")no-repeat 50%;
    background-size: 100%;
}

.btn.btn-share::before {
    background: url("data:image/png;base64,")no-repeat 50%;
    background-size: 100%;
}

.tips {
    width: 100%;
    text-align: center;
    font-size: 30rpx;
    font-weight: 800;
    color: #000;
    display: flex;
    justify-content: center;
    align-items: flex-start;
    position: absolute;
    bottom: 0;
    left: 0;
    height: 80rpx;
    background: #fff;
}