.container {
    padding-top: 30rpx;
    overflow: hidden;
    box-sizing: border-box;
}

.btn-wrap,.container {
    background: #fff;
    width: 100%;
}

.btn-wrap {
    padding-bottom: env(safe-area-inset-bottom);
    position: fixed;
    bottom: 0;
    left: 0;
    box-shadow: 0 5rpx 8rpx 0rpx rgba(73,112,191,.2);
}

.btn-inner {
    height: 130rpx;
    width: 680rpx;
    display: flex;
    justify-content: space-between;
    margin: auto;
}

.btn,.btn-inner {
    align-items: center;
}

.btn {
    width: 324rpx!important;
    height: 80rpx!important;
    margin: 0!important;
    padding: 0;
    color: #fff;
    border-radius: 40rpx;
    display: inline-flex;
    justify-content: center;
    font-size: 32rpx;
    font-weight: 700;
    box-sizing: border-box;
}

.btn-l {
    background: linear-gradient(135deg,#42adff,#4480f9);
}

.btn-l::before,.btn-r::before {
    content: "";
    width: 30rpx;
    height: 30rpx;
    margin-right: 12rpx;
}

.btn-l::before {
    background: url("data:image/png;base64,")no-repeat 50%;
    background-size: 100%;
}

.btn-r {
    background: linear-gradient(90deg,#00d14a,#00b11d);
}

.btn-r::before {
    background: url("data:image/png;base64,")no-repeat 50%;
    background-size: 100%;
}

.swiper-wrap {
    position: relative;
}

.swiper-wrap .next,.swiper-wrap .pre {
    width: 70rpx;
    height: 70rpx;
    background: rgba(0,0,0,.5);
    display: flex;
    align-items: center;
    justify-content: center;
    position: absolute;
    top: 50%;
    margin-top: -35rpx;
    z-index: 9;
    border-radius: 50%;
    font-size: 20rpx;
    font-weight: 900;
    color: #fff;
}

.swiper-wrap .pre {
    left: 20rpx;
}

.swiper-wrap .next::before,.swiper-wrap .pre::before {
    content: "";
    display: block;
    width: 16rpx;
    height: 16rpx;
    border-top: 4rpx solid #fff;
    border-left: 4rpx solid #fff;
}

.swiper-wrap .pre::before {
    transform: rotate(-45deg);
    margin-left: 8rpx;
}

.swiper-wrap .next {
    right: 15rpx;
}

.swiper-wrap .next::before {
    transform: rotate(135deg);
    margin-left: -8rpx;
}

.next.btn-active::after,.pre.btn-active::after {
    position: absolute;
    top: 0;
    right: 0;
    content: "";
    background: rgba(0,0,0,.3);
    width: 100%;
    height: 100%;
    border-radius: 50%;
}

.swiper {
    width: 100%;
    height: 1042rpx;
}

.item-inner,.swiper-item {
    width: 100%;
    height: auto;
}

.item-inner {
    display: flex;
    justify-content: center;
    position: relative;
}

.item-inner .img {
    width: 680rpx;
    height: 1042rpx;
}

.mask {
    width: 100%;
    height: 100vh;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 10;
    background: rgba(0,0,0,.65);
    color: #fff;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
}

.mask .img {
    width: 274rpx;
    height: 154rpx;
}

.mask .tit {
    font-size: 30rpx;
    font-weight: 700;
    color: #fff;
    line-height: 1;
    padding-top: 66rpx;
}

.indicator {
    display: flex;
    justify-content: center;
    align-content: center;
    position: absolute;
    bottom: 8rpx;
    left: 0;
    width: 100%;
}

.indicator .i {
    width: 12rpx;
    height: 12rpx;
    display: block;
    background: hsla(0,0%,100%,.4);
    border-radius: 50%;
    margin: 0 4rpx;
}

.indicator .i.act {
    background: #fff;
}