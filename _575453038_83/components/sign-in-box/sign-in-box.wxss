.sign-in-wrap {
    display: flex;
    align-items: flex-end;
}

.sign-in-wrap .star {
    text-align: center;
    font-size: 24rpx;
    font-weight: 400;
    color: #999;
    margin-right: 32rpx;
}

.sign-in-wrap .star,.sign-in-wrap .star .icon,.sign-in-wrap .star .icon-wrap {
    width: 56rpx;
    height: 56rpx;
    display: block;
}

.sign-in-wrap .star .icon-wrap {
    position: relative;
}

.sign-in-wrap .star.super-star,.sign-in-wrap .star.super-star .icon,.sign-in-wrap .star.super-star .icon-wrap {
    width: 84rpx;
    height: 94rpx;
}

.sign-in-wrap .star .icon {
    z-index: 2;
    position: absolute;
    top: 0;
    left: 0;
}

.sign-in-wrap .star .icon-wrap::before {
    content: "";
    width: 82rpx;
    height: 6rpx;
    position: absolute;
    bottom: 24rpx;
    right: 20rpx;
    background: #ece2d2;
    z-index: 1;
}

.sign-in-wrap .star.super-star .icon-wrap::before {
    width: 124rpx;
}

.sign-in-wrap .star.act .icon-wrap::before {
    background: #ffe6ab;
}

.sign-in-wrap .star.first .icon-wrap::before {
    display: none;
}

.sign-in-wrap .star.act {
    color: #fbb212;
}

.sign-in-wrap .star .d {
    line-height: 55rpx;
}